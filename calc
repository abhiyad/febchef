    #include <iostream>
    using namespace :: std;
    int main ()
    {
        int t=1;cin>>t;
        while(t--)
        {
            int k,i;
            int n,b;
            int max=0;
            cin>>n>>b;
            for(k=1;k<n;k++)
            {
                i=k*((n-k)/b);
                if(i>max)max=i;
            }
            cout<<max<<endl;
        }
        return 0;
    }
     
